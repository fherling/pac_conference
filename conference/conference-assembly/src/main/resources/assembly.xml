<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>distribution</id>
	<formats>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>

	<fileSets>
		<fileSet>
			<directory>src/main/resources/sql</directory>
			<outputDirectory>/sql</outputDirectory>
			<includes>
				<include>*.sql</include>
			</includes>
		</fileSet>
		<fileSet>
		    <directoryMode/>
			<directory>../target/site</directory>
			<outputDirectory>site</outputDirectory>
			<includes>
				<include>**/*.*</include>
			</includes>
		</fileSet>
		<fileSet>
		    <directoryMode/>
			<directory>../conference-core/target/site</directory>
			<outputDirectory>site/conference-core</outputDirectory>
			<includes>
				<include>**/*.*</include>
			</includes>
		</fileSet>
		<fileSet>
            <directoryMode/>
            <directory>../conference-ear/target/site</directory>
            <outputDirectory>site/conference-ear</outputDirectory>
            <includes>
                <include>**/*.*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directoryMode/>
            <directory>../conference-assembly/target/site</directory>
            <outputDirectory>site/conference-assembly</outputDirectory>
            <includes>
                <include>**/*.*</include>
            </includes>
        </fileSet>        
		<fileSet>
            <directoryMode/>
            <directory>../conference-war/target/site</directory>
            <outputDirectory>site/conference-war</outputDirectory>
            <includes>
                <include>**/*.*</include>
            </includes>
        </fileSet>
		<fileSet>
            <directoryMode/>
            <directory>../conference-speaker-service/target/site</directory>
            <outputDirectory>site/conference-speaker-service</outputDirectory>
            <includes>
                <include>**/*.*</include>
            </includes>
        </fileSet>
		<fileSet>
			<directoryMode/>
			<directory>../conference-speaker-api/target/site</directory>
			<outputDirectory>site/conference-speaker-api</outputDirectory>
			<includes>
				<include>**/*.*</include>
			</includes>
		</fileSet>
	</fileSets>

	<files>
		<file>
			<source>src/main/resources/doc/readme.txt</source>
			<outputDirectory>/</outputDirectory>
		</file>
	</files>
	<moduleSets>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<!-- Now, select which projects to include in this module-set. -->
			<includes>
				<include>com.prodyna.conference:conference-ear</include>
			</includes>
			<binaries>
				<outputDirectory>/artefact</outputDirectory>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>
	</moduleSets>
</assembly>